@model SAD.Cobranca.Application.Identity.Claims.ClaimsViewModel
@{
    ViewBag.Title = "Nova claim | SAD";
}

<div class="container-d">
    <div class="container">
        <div class="row pt-5">
            <hgroup class="mb-3">
                <h1 class="col-12 font-weight-bold px-0">REGISTRAR NOVA CLAIM</h1>
                <h5 class="col-12 font-weight-light px-0">Preencha os campos abaixo para registrar uma nova claim</h5>
            </hgroup>
        </div>
        @Html.Partial("_MenuUsuarios")
        <div class="row justify-content-lg-start">
            <div class="col-lg-6 col-sm-12 px-0">
                @using (Html.BeginForm("Create", "Claims", FormMethod.Post, new {@class = "", role = "form"}))
                {
                    @Html.AntiForgeryToken()

                    <div class="row form-group">
                        <div class="col-lg-12">
                            @Html.LabelFor(x => x.Name, new {@class = "col-lg-12 px-0 col-form-label text-uppercase f-size-6"})
                            @Html.TextBoxFor(x => x.Name, new {@class = "form-control form-control-lg"})
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-lg-12">
                            @Html.ActionLink("Voltar", null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-link" })
                            <input type="submit" class="btn btn-primary cursor-p" value="Registrar"/>
                        </div>
                    </div>
                }
            </div>
            <div class="col-lg-4 col-sm-12 pr-0 pt-lg-4 pt-sm-1">
                @Html.Partial("_ErrorSummary")
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}